<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fill the rectangle with a muted gold shade -->
    <solid android:color="@color/gold_muted_500" />

    <!-- Stroke with a slightly darker shade of gold for contrast -->
    <stroke android:width="2dp" android:color="@color/gold_muted_600" />

    <!-- Rounded corners for the rectangle -->
    <corners android:radius="8dp" />

    <!-- Padding inside the rectangle -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
